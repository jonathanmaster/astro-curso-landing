---
import { projects } from "../../config/projects.json";
---

<h2 class="fon-bold text-5xl my-5 text-center m-8">Projects</h2>

{
  projects.map((project) => (
    <div class="flex flex-col md:flex-row text-center md:text-left mb-6">
      <div class="flex-1 p-4">
        <h2 class="text-2xl font-bol my-4">{project.title}</h2>
        <p class="my-3">{project.description}</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
            More info
        </button>
      </div>
      <div class="flex-1">
        <img src={project.images} alt="icon" class="w-72 m-auto" />
      </div>
    </div>
  ))
}
